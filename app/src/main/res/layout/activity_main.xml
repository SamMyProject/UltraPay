<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sam.order_sound.MainActivity"
    android:background="@color/back">


    <Button
        android:id="@+id/manageOrders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_marginBottom="10dp"
        android:onClick="viewOrders"
        android:text="管理訂單" />

    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_marginBottom="10dp"
        android:onClick="Clear"
        android:text="清空" />
    <Button
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="2"
        android:layout_marginBottom="10dp"
        android:onClick="Logout"
        android:text="登出" />


    <Button
        android:id="@+id/manageMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_marginBottom="10dp"
        android:text="管理菜單" />


    <EditText
        android:id="@+id/card_id"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="0"
        android:width="160dp"
        android:ems="10"
        android:focusedByDefault="false"
        android:hint="卡號"
        android:inputType="textPersonName" />


    <EditText
        android:id="@+id/custName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_row="1"
        android:layout_column="0"
        android:focusedByDefault="false"
        android:width="160dp"
        android:hint="統編" />

    <Button
        android:id="@+id/placeOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="2"
        android:padding="5dp"
        android:background="#00aadd"
        android:onClick="placeOrder"
        android:text="下訂單" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:text="總金額: "
        android:layout_marginLeft="10dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/orderTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:text="0$" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="3"
        android:layout_column="0"
        android:textAlignment="center"
        android:layout_row="3"
        android:text="菜單"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textSize="16pt"/>

    <ListView
        android:id="@+id/lvMenuItem"
        android:layout_column="0"
        android:layout_columnSpan="10"
        android:layout_row="4"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>

    <Button
        android:id="@+id/couponButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="8"
        android:layout_row="0"
        android:onClick="CouponCheck"
        android:text="折扣" />

    <Button
        android:id="@+id/useCoupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="8"
        android:layout_row="1"
        android:onClick="useCoupon"
        android:text="使用優惠" />

</GridLayout>

